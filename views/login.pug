extends layout

block content
  .container
    .row
      .col
        h3.mt-4 Log In
    
    .row
      .col
        form(method='POST' action='/login')
          .form-group
            label(for='username') Username
            input.form-control(type='text' id='username' name='usernameInput' placeholder='Enter your username')
          .form-group
            label(for='password') Password
            input.form-control(type='password' id='password' name='passwordInput' placeholder='Enter your password')
          button.btn.btn-primary(type='submit') Log In