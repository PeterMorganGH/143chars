extends layout

block content
  .container
    form(method='POST' action='/login')
      .row
        .six.columns
          label(for='usernameInput') Username
          input.u-full-width(type='text' id='username' name='usernameInput' placeholder='Enter your username')
        .six.columns
          label(for='passwordInput') Password
          input.u-full-width(type='password' id='password' name='passwordInput' placeholder='Enter your password')
      input.button-primary(type='submit' value='Log In')
