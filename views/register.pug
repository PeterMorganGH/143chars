extends layout

block content
  .container
    form(method='POST' action='/register')
      .row
        .six.columns
          label(for='usernameInput') Username
          input.u-full-width(type='text' id='username' name='usernameInput' placeholder='Enter your desired username')
        .six.columns
          label(for='passwordInput') Password
          input.u-full-width(type='password' id='password' name='passwordInput' placeholder='Enter your desired password')
      input.button-primary(type='submit' value='Register')